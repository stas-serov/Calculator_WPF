                    <GradientStop Color="#FF1F52AA"/>
                    <GradientStop Color="#FF31875C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <!--Создаем кнопку "/"-->
        <Button x:Name="button_div" Grid.Column="3" Grid.Row="3"  Margin="3" Content="/" FontSize="18" Click="button_div_Click">
