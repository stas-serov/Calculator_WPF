                    <GradientStop Color="#FF1FAA45"/>
                    <GradientStop Color="#FF31875C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <!--Создаем кнопку "cos"-->
        <Button x:Name="button_cos" Grid.Column="4" Grid.Row="3"  Margin="3" Content="cos" FontSize="18" Click="button_cos_Click">
            <Button.Background>
