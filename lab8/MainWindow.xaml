        </Button>
        <!--Создаем кнопку "√x"-->
        <Button x:Name="button_root" Grid.Column="3" Grid.Row="4"  Margin="3" Content="√x" FontSize="18" Click="button_root_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
